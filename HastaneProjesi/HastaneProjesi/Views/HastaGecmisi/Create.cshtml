@model HastaneProjesi.Models.HastaGecmisi

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Sablon.cshtml";
}

<br />
<h4>HastaGecmisi</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GecirdigiHastaliklar" class="control-label"></label>
                <input asp-for="GecirdigiHastaliklar" class="form-control" />
                <span asp-validation-for="GecirdigiHastaliklar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GecirdigiAmeliyatlar" class="control-label"></label>
                <input asp-for="GecirdigiAmeliyatlar" class="form-control" />
                <span asp-validation-for="GecirdigiAmeliyatlar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tarih" class="control-label"></label>
                <input asp-for="Tarih" class="form-control" />
                <span asp-validation-for="Tarih" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Hasta Adı</label>
                <select asp-for="HastaSikayetiId" class ="form-control" asp-items="ViewBag.HastaSikayetiId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

