@model HastaneProjesi.Models.Recete

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Sablon.cshtml";
}

<br />
<h4>Recete</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                Reçete Giriş
                <input asp-for="IlacAd" class="form-control" />
                <span asp-validation-for="IlacAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                Hasta Adı
                <select asp-for="TahlillerId" class="form-control" asp-items="ViewBag.TahlillerId"></select>
                <span asp-validation-for="TahlillerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">Listeye Geri Dön</a>
</div>

