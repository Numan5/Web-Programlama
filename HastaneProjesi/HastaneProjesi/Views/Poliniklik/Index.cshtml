@model IEnumerable<HastaneProjesi.Models.Poliniklik>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Sablon.cshtml";
}

<br />

<table id="example" class="table table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PolinikAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hastaneler)
            </th>
            <th width="75px">Güncelle</th>
            <th width="75px">Detay</th>
            <th width="75px">Sİl</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="alert-dark">
                    @Html.DisplayFor(modelItem => item.PolinikAd)
                </td>
                <td class="alert-dark">
                    @Html.DisplayFor(modelItem => item.Hastaneler.Ad)
                </td>
                <td class="alert-dark">
                    <a asp-action="Edit" class="btn btn-primary " asp-route-id="@item.Id">Güncelle</a>

                </td>
                <td class="alert-dark">
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">Detay</a>
                </td>
                <td class="alert-dark">
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-warning">Ekle</a>
</p>


