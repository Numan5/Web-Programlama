@model IEnumerable<HastaneProjesi.Models.Doktorlar>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Sablon.cshtml";
}

<br />


<table id="example" class="table table-dark">
    <thead >
        <tr>
            <th>

                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DogumYeri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cinsiyet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DogumTarihi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unvanlar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Poliniklik)
            </th>
            <th>Güncelle</th>
            <th>Detay</th>
            <th>Sİl</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="alert-dark">
                    @Html.DisplayFor(modelItem => item.Ad)
                </td>
                <td class="alert-dark">
                    @Html.DisplayFor(modelItem => item.Soyad)
                </td>
                <td class="alert-dark">
                    @Html.DisplayFor(modelItem => item.DogumYeri)
                </td>
                <td class="alert-dark">
                    @Html.DisplayFor(modelItem => item.Cinsiyet)
                </td>
                <td class="alert-dark">
                    @Html.DisplayFor(modelItem => item.DogumTarihi)
                </td>
                <td class="alert-dark">
                    @Html.DisplayFor(modelItem => item.Unvanlar.UnvanAd)
                </td>
                <td class="alert-dark">
                    @Html.DisplayFor(modelItem => item.Poliniklik.PolinikAd)
                </td>
                <td class="alert-dark">
                    <a asp-action="Edit" class="btn btn-primary " asp-route-id="@item.Id">Güncelle</a>

                </td>
                <td class="alert-secondary">
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.Id">Detay</a>
                </td>
                <td class="alert-secondary">
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a asp-action="Create" class="btn btn-warning">Yeni Doktor Ekle</a>
</p>