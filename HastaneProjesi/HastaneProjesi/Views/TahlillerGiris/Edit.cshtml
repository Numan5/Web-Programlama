@model HastaneProjesi.Models.Tahliller

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Sablon.cshtml";
}

<br />
<h4>Tahliller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TahlilAd" class="control-label"></label>
                <input asp-for="TahlilAd" class="form-control" />
                <span asp-validation-for="TahlilAd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TahlilSonucu" class="control-label"></label>
                <input asp-for="TahlilSonucu" class="form-control" />
                <span asp-validation-for="TahlilSonucu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HastaGecmisiId" class="control-label"></label>
                <select asp-for="HastaGecmisiId" class="form-control" asp-items="ViewBag.HastaGecmisiId"></select>
                <span asp-validation-for="HastaGecmisiId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-success">Listeye Geri Dön</a>
</div>

